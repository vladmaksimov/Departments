<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:application.properties"/>
    </bean>

    <bean id="pageRequest" class="org.springframework.data.domain.PageRequest">
        <constructor-arg name="size" value="${pageable.default.size}"/>
        <constructor-arg name="page" value="${pageable.default.page}"/>
        <constructor-arg name="sort" ref="sort"/>
    </bean>

    <bean id="sort" class="org.springframework.data.domain.Sort">
        <constructor-arg name="direction" value="${pageable.default.direction}"/>
        <constructor-arg>
            <list>
                <value>${pageable.default.sort}</value>
            </list>
        </constructor-arg>
    </bean>

</beans>