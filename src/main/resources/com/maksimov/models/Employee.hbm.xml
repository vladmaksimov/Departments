<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class table="employee" name="com.maksimov.models.Employee">

        <id name="id" column="id" type="long">
            <generator class="native"/>
        </id>

        <property name="email" column="email" type="string" length="250" not-null="true" unique="true"/>
        <property name="name" column="name" type="string" length="250" not-null="true"/>
        <property name="birthday" column="birthday" type="date" not-null="true"/>

        <many-to-one name="department"
                     class="com.maksimov.models.Department"
                     column="department"/>

    </class>

</hibernate-mapping>